{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    // "composite": true,
    "skipLibCheck": true,
    "declaration": true,
    "noEmit": true,
    // 设置基准目录为根目录
    "baseUrl": ".",
    // 设置别名规则，不设置ts语法检查会报错
    "paths": {
      "@/src/*": [
        "./src/*"
      ],
      "@/packages/*": [
        "packages/*"
      ]
    },
    "types": [
      "unplugin-vue-define-options/macros-global" /* ... */
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "packages/**/*.ts",
    "packages/**/*.d.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}